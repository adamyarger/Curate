<% provide(:title, @title) %>

<div id="edit-wrapper">
  <div id="edit-main">
  
    <section class="user_info">
      
      <h1><%= @user.name  %>| <%= @title  %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <!-- profile pic -->
        </div>
      <% end %>
    </section>
  
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
  </div>
</div>