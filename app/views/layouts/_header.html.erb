<header>
    


    <!-- <div id="avatar-menu"><a href="#0">Menu</a></div> -->
    <% if user_signed_in? %>
      <div id="left-nav">
        <ul>
            <li>
              <a id="nav-logo" href="#">R</a>
            </li>
            <li class="round-image-50 nav_avatar">
              <%= image_tag(current_user.avatar.url(:thumb)) %>
            </li>
            
            <span>     
                <%= render 'messages/count' %>
            </span>
            
        </ul>
      </div>
        
      <div id="right-nav">
        <ul>
          <li class="post button"><a class="cd-signin" href="#0">Post</a></li>
          <li class="button" id="cd-cart-trigger"><a>Share</a></li>
        </ul>
      </div>

          <% else %>
                <div class="signed-out-nav">
                  <ul>
                     <li class="navbar-item sign-in">
                        <%= link_to "Sign In", new_user_session_path, class: "popover-link" %>
                     </li>
                     <li class="navbar-item sign-in">
                        <%= link_to "Register", new_user_registration_path, class: "popover-link" %>
                     </li>
                  </ul>
                </div>
          <% end %>
    

</header>


<nav id="main-nav">
      
        
        <ul>
          

          <% if user_signed_in? %>
              <li class="popover-item">
                 <%= link_to "Home", root_path, class: "popover-link" %>
              </li>
              <li class="popover-item">
                 <%= link_to "Profile", current_user, class: "popover-link" %>
              </li>

              <li class="navbar-item">
                  <%= link_to "Messages", messages_path %>
              </li>

              <li class="navbar-item">
                  <%= link_to "Users", users_path %>
              </li>

               <li class="popover-item">
                 <%= link_to "Settings", edit_user_registration_path %>
               </li>

               <li class="popover-item">
                 <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
               </li>
          <% end %>

        </ul>
      
</nav>


<% if user_signed_in? %>
  <%= render 'layouts/right_slide' %>
<% end %>

<% if user_signed_in? %>
  <%= render 'posts/post_modal' %>
<% end %>
