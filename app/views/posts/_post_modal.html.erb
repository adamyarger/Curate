<a data-toggle="modal" href="#fixedPullModal" id="nav_button" class="pull-left btn btn-default btn-large">My Songs</a>

<div id="fixedPullModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 id="modal-label">Share Some Sound</h4>
            </div>
            <div class="modal-body">
                <%= form_for :post, url: posts_path do |f| %>
            
                    <%= f.label     :body %><br>
                    <%= f.text_area :body, placeholder: "Share a sound...", class: 'form-control' %>
                    <br>
                    <%= f.submit "Submit Post", class: "btn btn-primary" %>

                <% end %>
            </div>
        </div> <!--modal-content-->
    </div> <!--modal-dialog-->
</div> <!--modal-->



