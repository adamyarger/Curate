<h1> Index </h1>



<div class="wrapper col-md-6 col-md-offset-3">
		<% @messages.each do |message| %>
			<div class="post_wrapper">
				<div class="media_wrapper">
					   			<!-- links to the users profile -->
					   			<strong><%= message.message.sender.name %></strong>
					<p class="media"><%= message.message.body_html %></p>

					<div class="date_and_like">
						<p class="date">Sent <%= time_ago_in_words(message.message.created_at) %> Ago</p>
			            
			        </div>
				</div>
			</div>
		<% end %>
</div>