

<% @messages.each do |message| %>
    <div class="post_show">
        <div class="panel panel-default">
          <div class="panel-heading post_media">
            <%= message.message.body_html %>
          </div>
          <div class="panel-footer">
            <div class="row">
              <div class="name_avatar u-pull-left">
                <span class="round-image-50 name  user_avatar u-pull-left">
                  <%= link_to image_tag(message.message.sender.avatar.url(:thumb)), message.message.sender %>
                </span>
                <span class="user_name post_name u-pull-left">
                  <%= link_to message.message.sender.name, message.message.sender %>
                </span>
              </div>
              
                <div id="star" class="star_group u-pull-right">
                    <!-- link to like post here -->
                      <i class="fa fa-star"></i>
                      <!-- number of like goes here --> 2
                  
                </div>
              
            </div>
          </div>
        </div>
    </div>
<% end %>

