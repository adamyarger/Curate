




    <%= form_for @message do |f| %>
		<%= f.text_area :body, class: "form-control" %>
		<div class="well" >
		   <% @user.each do |user| %>
		   
			    	<li class="list-group-item">
			    		<span class="round-image-50"><%= image_tag(user.avatar.url(:thumb)) %></span>
						<span><%= user.name %></p></span>
						<span class="follow_list_box"><%= check_box_tag "message[user_tokens][]", user.id, @message.users.include?(user) %></span>
					</li>
				
			
		   <% end %>
		</div>
		<p><%= f.button :submit, class: "btn btn-primary" %></p>
    <% end %>


